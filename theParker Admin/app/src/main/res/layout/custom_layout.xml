<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:id="@+id/top">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Details"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="20dp"
            android:id="@+id/select"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/layout_name">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Package Name"
                android:gravity="center"
                android:textColor="@color/colorDarkGray"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Name"
                android:id="@+id/package_name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/layout_name1"
            android:layout_below="@id/layout_name"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Select Car"
                android:gravity="center_vertical|center"
                android:textColor="@color/colorDarkGray"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/Spinner_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/layout_name2"
            android:layout_below="@id/layout_name1"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Select Car"
                android:gravity="center_vertical|center"
                android:textColor="@color/colorDarkGray"
                android:textSize="15dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/Spinner_bike"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/layout_name3"
            android:layout_below="@id/layout_name2"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Package Price"
                android:gravity="center"
                android:textColor="@color/colorDarkGray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Price"
                android:id="@+id/package_price"
                android:inputType="number"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Create Package"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_name3"
            android:layout_marginTop="5dp"
            android:id="@+id/create_package"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>


</RelativeLayout>
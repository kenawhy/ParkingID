<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/package_name"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="5sp"
            android:layout_toLeftOf="@id/buy_circular_btn"
            android:background="@drawable/bg_rectangle_rounded"
            android:gravity="center"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="Pacakge 1"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/package_price"
            android:layout_width="107dp"
            android:layout_height="41dp"
            android:layout_below="@id/package_name"
            android:layout_marginStart="10sp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/bg_rectangle_rounded"
            android:gravity="center"
            android:text="Rp 5000"
            android:textColor="@color/colorWhite"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/no_of_spaces"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:layout_below="@id/package_name"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/package_price"
            android:background="@drawable/bg_rectangle_rounded"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorWhite"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:layout_below="@id/package_name"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="5sp"
            android:layout_toRightOf="@id/no_of_spaces"
            android:background="@drawable/bg_rectangle_rounded"
            android:src="@drawable/ic_directions_car_black_24dp" />


        <at.markushi.ui.CircleButton
            android:id="@+id/buy_circular_btn"
            style="@style/BuyButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10sp"
            app:cb_color="@color/colorPrimaryDark"
            app:cb_pressedRingWidth="2.0dip" />

    </RelativeLayout>

</RelativeLayout>
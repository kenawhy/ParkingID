<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ShowActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="DialogAnimations" />
    <style name="DialogAnimations.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/unzoom_in</item>
        <item name="android:windowExitAnimation">@anim/unzoom_out</item>
    </style>

    <style name="PackageBuyAnimation" />
    <style name="PackageBuyAnimation.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CodeEditText">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:inputType">phone</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="NextButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
    </style>

    <style name="AddButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:src">@drawable/icon_add</item>
    </style>

    <style name="FinishButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:src">@drawable/ic_check_black_24dp</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:src">@drawable/icon_search</item>
    </style>

    <style name="BuyButton">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">64sp</item>
        <item name="android:layout_height">64sp</item>
        <item name="android:src">@drawable/buy</item>
    </style>

    <style name="FOL_Theme_SnackbarWrapper" parent="@style/Theme.AppCompat">
        <!--Insert customization here-->
    </style>

</resources>
